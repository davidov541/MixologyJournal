<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MixologyJournalApp.View.SetupPage"
             xmlns:controls="clr-namespace:MixologyJournalApp.View.Controls"
             Visual="Material">
    <ContentPage.Resources>
        <DataTemplate x:Key="DescriptionTemplate">
            <StackLayout HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand">
                <Frame Margin="10,10,10,10"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand">
                    <Label Text="{Binding Caption}"
                           Style="{StaticResource Key=SetupWizardText}" />
                </Frame>
            </StackLayout>
        </DataTemplate>
        <DataTemplate x:Key="DescriptionAndImageTemplate">
            <StackLayout HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand">
                <Frame Margin="10,10,10,10"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0"
                               Grid.RowSpan="2"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand"
                               Aspect="Fill"
                               Source="blackboard_background.jpg" />
                        <Image Source="{Binding ImageSource}"
                               Grid.Row="0" />
                        <Label Text="{Binding Caption}"
                               Grid.Row="1"
                               Style="{StaticResource Key=SetupWizardText}" />
                    </Grid>
                </Frame>
            </StackLayout>
        </DataTemplate>

        <DataTemplate x:Key="LoginTemplate">
            <StackLayout>
                <Frame Margin="10,10,10,10"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Label Text="{Binding Caption}"
                               VerticalOptions="CenterAndExpand"
                               Grid.Row="0"
                               Style="{StaticResource Key=SetupWizardText}"/>
                        <StackLayout Padding="20"
                                     VerticalOptions="End"
                                     x:Name="mainLayout"
                                     Grid.Row="1"
                                     BindableLayout.ItemsSource="{Binding LoginMethods}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Button Text="{Binding Name, StringFormat='Use {0}'}"
                                            ImageSource="{Binding Icon}"
                                            HeightRequest="50"
                                            TextColor="{Binding ForegroundColor}"
                                            BackgroundColor="{Binding BackgroundColor}"
                                            Command="{Binding LoginCommand}"
                                            WidthRequest="250"
                                            HorizontalOptions="CenterAndExpand"
                                            VerticalOptions="FillAndExpand" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </Grid>
                </Frame>
            </StackLayout>
        </DataTemplate>

        <controls:SetupItemDataTemplateSelector x:Key="setupItemSelector"
                                                DescriptionTemplate="{StaticResource DescriptionTemplate}"
                                                LoginTemplate="{StaticResource LoginTemplate}"
                                                ImageTemplate="{StaticResource DescriptionAndImageTemplate}"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <CarouselView x:Name="setupView"
                          ItemsSource="{Binding PageItems}"
                          Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          ItemTemplate="{StaticResource setupItemSelector}"
                          Position="{Binding Position, Mode=TwoWay}"
                          PeekAreaInsets="25"
                          IsBounceEnabled="True"/>
            <IndicatorView x:Name="indicatorView"
                           IndicatorColor="LightGray"
                           SelectedIndicatorColor="DarkGray"
                           IndicatorView.ItemsSourceBy="setupView"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Grid.Row="1"
                           Grid.Column="1"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>