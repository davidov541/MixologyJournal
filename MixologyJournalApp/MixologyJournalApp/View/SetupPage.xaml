<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MixologyJournalApp.View.SetupPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <CarouselView x:Name="setupView"
                          ItemsSource="{Binding PageItems}"
                          Grid.Row="0"
                          Grid.Column="0">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Caption}"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="CenterAndExpand" />
                            <StackLayout Padding="20"
                                         VerticalOptions="CenterAndExpand"
                                         x:Name="mainLayout"
                                         BindableLayout.ItemsSource="{Binding LoginMethods}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Button Text="{Binding Name, StringFormat='Login with {0}'}"
                                                ImageSource="{Binding Icon}"
                                                HeightRequest="48"
                                                TextColor="{Binding ForegroundColor}"
                                                BackgroundColor="{Binding BackgroundColor}"
                                                Command="{Binding LoginCommand}"
                                                WidthRequest="200"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="FillAndExpand" />
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                            <Button x:Name="SkipButton" Text="Skip" HeightRequest="48" Clicked="SkipButton_Clicked" />
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <IndicatorView x:Name="indicatorView"
                           IndicatorColor="LightGray"
                           SelectedIndicatorColor="DarkGray"
                           IndicatorView.ItemsSourceBy="setupView"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Grid.Row="1"
                           Grid.Column="0"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>