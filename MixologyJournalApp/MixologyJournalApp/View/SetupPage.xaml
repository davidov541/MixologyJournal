<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MixologyJournalApp.View.SetupPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Mixology Journal! Please log in with your authentication mechanism of choice."
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <StackLayout Padding="20"
                         VerticalOptions="CenterAndExpand" 
                         x:Name="mainLayout"
                         BindableLayout.ItemsSource="{Binding LoginMethods}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Name, StringFormat='Login with {0}'}"
                                ImageSource="{Binding Icon}"
                                HeightRequest="48"
                                TextColor="{Binding ForegroundColor}"
                                BackgroundColor="{Binding BackgroundColor}"
                                Command="{Binding LoginCommand}"
                                WidthRequest="200"
                                HorizontalOptions="CenterAndExpand"
                                VerticalOptions="FillAndExpand" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <Button x:Name="SkipButton" Text="Skip" Clicked="SkipButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>